@model CourseManagementSystem.Models.CourseThread

@using (Ajax.BeginForm("Create", "CourseThread", null, new AjaxOptions
{
    HttpMethod = "post",
    InsertionMode = InsertionMode.InsertBefore,
    UpdateTargetId = "CourseThreads"
}))
{
    <div class="form-horizontal" style="margin-bottom:7px;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="margin-bottom:0px;">
            @Html.HiddenFor((model) => model.CourseId)
            <div class="col-lg-10 col-md-8 col-sm-8 col-xs-6">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", style = "min-width:60%", placeholder = "Enter a topic..." } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-1 col-md-2  col-sm-2 col-xs-3">
                <div class="text-right">
                    <button type="submit" class="btn btn-info">Submit</button>
                </div>
            </div>
            <div class="col-lg-1 col-md-2  col-sm-2 col-xs-3">
                <div class="text-right">
                    <button type="reset" class="btn btn-default">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}
