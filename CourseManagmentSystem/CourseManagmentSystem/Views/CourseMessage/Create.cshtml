@model CourseManagmentSystem.Models.CourseMessage

@using (Ajax.BeginForm("Create", "CourseMessage", null, new AjaxOptions
{
    HttpMethod = "post",
    InsertionMode = InsertionMode.InsertAfter,
    UpdateTargetId = "CourseMessages"
}))
{
    
    <div class="panel panel-primary" style="margin:5px;padding-left:20px;padding-right:20px;height:200px;">
        <div class="panel-body">
            @Html.HiddenFor((model) => model.ThreadId)
            <form class="form-horizontal">
                <div class="form-group" style="margin-bottom:13px;">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding: 0">
                        @Html.TextAreaFor(model => model.Text, new { @class ="form-control", rows="5",
                            style ="min-width: 100%; resize: none;", id="textArea"})
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding: 0">
                        <div class="text-right">
                            <button type="submit" class="btn btn-info" style="margin-top:10px;" onclick="setTimeout(() => {$('#textArea').val('')}, 0)">Reply</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
